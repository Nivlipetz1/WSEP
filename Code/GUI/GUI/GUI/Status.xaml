<Page x:Class="GUI.Status"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      Background="Black"
      d:DesignHeight="31" d:DesignWidth="825"
      Title="Status">

    <Grid>
        <Label Name="username" Content="Label" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="5,4,0,0" VerticalAlignment="Top"/>
        <Label Name="credit" Content="Label" Foreground="WhiteSmoke" HorizontalAlignment="Right" Margin="0,4,5,0" VerticalAlignment="Top"/>
        <Label Content="Active Games:" Foreground="WhiteSmoke" HorizontalAlignment="Center" Margin="-100,0,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="GameList" HorizontalAlignment="Center" Margin="100,4,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding }" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <Button Name="GoBtn" Click="GoBtn_Click" Content="Go" HorizontalAlignment="Left" Margin="530,5,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Page>
