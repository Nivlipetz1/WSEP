<Page x:Class="GUI.Status"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      Background="Black"
      d:DesignHeight="31" d:DesignWidth="825"
      Title="Status">

    <Grid>
        <Label Name="username" Content="Label" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="5,4,0,0" VerticalAlignment="Top"/>
        <Label Name="credit" Content="Label" Foreground="WhiteSmoke" HorizontalAlignment="Right" Margin="0,4,5,0" VerticalAlignment="Top"/>
        <StackPanel x:Name="spMain" HorizontalAlignment="Center" Orientation="Horizontal" Margin="273,0,211.333,-0.333" Width="341">
            <Label Content="Active Games:" Foreground="WhiteSmoke" HorizontalAlignment="Center" VerticalAlignment="Top" Width="84"/>
            <ComboBox Name="GameList" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,5,0,0" SelectionChanged="GameList_SelectionChanged" DropDownOpened="GameList_DropDownOpened">
            </ComboBox>
            <Button x:Name="GoBtn" Click="GoBtn_Click" Content="Go" HorizontalAlignment="Center" Height="23" Width="75" Margin="10,4,0,3.667"/>
        </StackPanel>

    </Grid>
</Page>
