        <Label Name="player5" Visibility="Hidden" Content="Label" Canvas.Left="416" Canvas.Top="70"/>
        <Image Name="player5Avatar" Visibility="Hidden" Source="./Images/default_avatar.png" Height="20" Width="20" Canvas.Left="396" Canvas.Top="80"/>
        <Label Name="player6" Visibility="Hidden" Content="Label" Canvas.Left="516" Canvas.Top="388"/>
        <Image Name="player6Avatar" Visibility="Hidden" Source="./Images/default_avatar.png" Height="20" Width="20" Canvas.Left="496" Canvas.Top="398"/>
        <Label Name="player7" Visibility="Hidden" Content="Label" Canvas.Left="516" Canvas.Top="243"/>
        <Image Name="player7Avatar" Visibility="Hidden" Source="./Images/default_avatar.png" Height="20" Width="20" Canvas.Left="496" Canvas.Top="253"/>
        <Label Name="credit" Visibility="Hidden" Content="Label" Canvas.Left="290" Canvas.Top="482"/>
        <Label Name="betted" Visibility="Hidden" Content="Label" Canvas.Left="290" Canvas.Top="460"/>
        <Image Name="playerAvatar" Source="./Images/default_avatar.png" Visibility="Hidden" Height="20" Width="20" Canvas.Left="265" Canvas.Top="470"/>
        <Button Name="Quit" Click="Quit_Click" Content="Quit" Canvas.Left="487" Canvas.Top="493" Width="75"/>
        <Button x:Name="BackToGC" Click="BackToGC_Click"  Content="Game Center" Canvas.Left="487" Canvas.Top="463" Width="75"/>
        <Button Name="startgameBtn" Visibility="Hidden"/>
        <Label Name="MinimumBetLabel" Content="Label" Visibility="Hidden" Canvas.Top="397"/>
        <Label Name="PotSizeLbl" Visibility="Hidden"  Content="Label" Canvas.Left="203" Canvas.Top="332" Width="125"/>
        <Label Name="PotLimitLbl" Visibility="Hidden"  Content="Pot Limit is On!" Canvas.Left="203" Canvas.Top="362" Width="125"/>
        <Label Name="SpecLbl" FontSize="25" Visibility="Hidden" Content="Spectator Mode" Canvas.Left="10" Canvas.Top="476" Width="190" Height="65"/>
        <Button x:Name="CheckBtn" Click="CheckBtn_Click" Visibility="Hidden" Content="Check" Canvas.Left="11" Canvas.Top="496" Width="75"/>
        <Button x:Name="BlackChip100Btn"  Cursor="Hand" Click="ChipBtn_Click" Content="" Visibility="Hidden" Canvas.Top="423" Width="40" Height="42" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Images/chips/chips_black.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="BlueChip10Btn"   Cursor="Hand" Click="ChipBtn_Click" Content="" Visibility="Hidden" Canvas.Left="80" Canvas.Top="423" Width="40" Height="42" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Images/chips/chips_blue.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="GreenChip25Btn"  Cursor="Hand" Content="" Canvas.Left="40" Canvas.Top="423" Visibility="Hidden" Width="40" Height="42" Click="ChipBtn_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Images/chips/chips_green.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="RedChip5Btn"   Cursor="Hand" Content="" Canvas.Left="120" Canvas.Top="423" Visibility="Hidden" Width="40" Height="42" RenderTransformOrigin="0.4,-0.233" Click="ChipBtn_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Images/chips/chips_red.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="WhiteChip1Btn"  Cursor="Hand"  Canvas.Left="160" Canvas.Top="423" Visibility="Hidden" Width="40" Height="42" Click="ChipBtn_Click" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Images/chips/chips_white.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label Name="SpectatorsLbl" Visibility="Hidden" Content="Label" Canvas.Left="416" Canvas.Top="10" Width="100"/>

    </Canvas>

</Page>
