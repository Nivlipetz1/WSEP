<Page x:Class="GUI.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="569" d:DesignWidth="525"
      Title="Game">
    <Page.Resources>
        <Style x:Key="InformButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="11px"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter  Property="BorderBrush" Value="#FF4788c8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="./Images/gamebackground.png" Stretch="UniformToFill"/>
        </Canvas.Background>
        <Image Name="Card1" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card2" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card3" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card4" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card5" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card6" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card7" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card8" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card9" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card10" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card11" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card12" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card13" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="Card14" Visibility="Hidden" Height="70" Source="./Images/Cards/back.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="FlopCard1" Visibility="Hidden" Height="70" Source="./Images/Cards/S1.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="FlopCard2" Visibility="Hidden" Height="70"  Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="FlopCard3" Visibility="Hidden" Height="70"  Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="RiverCard" Visibility="Hidden" Height="70"  Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="TurnCard" Visibility="Hidden" Height="70" Source="./Images/Cards/S10.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="UserCard1" Visibility="Hidden" Height="70" Source="./Images/Cards/S1.png" Canvas.Left="241" Canvas.Top="152"/>
        <Image Name="UserCard2" Visibility="Hidden" Height="70" Source="./Images/Cards/S1.png" Canvas.Left="241" Canvas.Top="152"/>
        <TextBox Name="BetAmount" Visibility="Hidden" Height="20" Canvas.Left="11" TextWrapping="Wrap" Text="" Canvas.Top="471" Width="75"/>
        <Button Name="Bet_Button" Click="Bet_Button_Click" Visibility="Hidden" Content="Bet" Canvas.Left="99" Canvas.Top="471" Width="75"/>
        <Button Name="Fold_Button" Click="Fold_Button_Click" Visibility="Hidden" Content="Fold" Canvas.Left="99" Canvas.Top="494" Width="75"/>
        <Label Name="player1" Visibility="Hidden" Content="Label" Canvas.Left="30" Canvas.Top="388"/>
        <Image Name="player1Avatar" Visibility="Hidden" Source="./Images/default_avatar.png" Height="20" Width="20" Canvas.Left="10" Canvas.Top="398"/>
        <Label Name="player2" Visibility="Hidden" Content="Label" Canvas.Left="30" Canvas.Top="243"/>
        <Image Name="player2Avatar" Visibility="Hidden" Source="./Images/default_avatar.png" Height="20" Width="20" Canvas.Left="10" Canvas.Top="253"/>
        <Label Name="player3" Visibility="Hidden" Content="Label" Canvas.Left="99" Canvas.Top="70"/>
        <Image Name="player3Avatar" Visibility="Hidden" Source="./Images/default_avatar.png" Height="20" Width="20" Canvas.Left="79" Canvas.Top="80"/>
        <Label Name="player4" Visibility="Hidden" Content="Label" Canvas.Left="278" Canvas.Top="70"/>
