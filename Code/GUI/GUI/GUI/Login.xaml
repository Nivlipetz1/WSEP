<Page x:Class="GUI.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="569" d:DesignWidth="825"
      Title="Login">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="./Images/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBox Name="username"  HorizontalAlignment="Left" Height="21" Margin="345,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="password" Width="120" HorizontalAlignment="Left" Height="21" Margin="347,115,0,0" VerticalAlignment="Top"/>
        <Button Name="Register" Click="Register_Click" Content="Register" HorizontalAlignment="Left" Margin="348,144,0,0" VerticalAlignment="Top" Width="75"/>


        <Label Content="Email:" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="274,80,0,0" VerticalAlignment="Top" />
        <Label Content="Password:" Foreground="WhiteSmoke" HorizontalAlignment="Left" Margin="274,112,0,0" VerticalAlignment="Top" />
        <Button IsDefault="True" Click="Login_Click" Content="Login" HorizontalAlignment="Left" Margin="428,144,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Page>
